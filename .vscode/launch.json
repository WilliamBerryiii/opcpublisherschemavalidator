{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch App validation",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\build\\src\\index.js",
            "args": [
                "v",
                "-s .\\output\\publishednodes-schema.json",
                "-t publishednodes",
                "-cf .\\sample_files\\publishednodes.json"
            ],
            "outFiles": [
                "${workspaceFolder}/build/src/**/*.js"
            ],
            "outputCapture": "std",
            "cwd": "${workspaceFolder}/build/src",
            "preLaunchTask": "Build Debug",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch App with gps",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\build\\src\\index.js",
            "args": [
                "gps",
                "-v [NamespaceIndex, NodeId, ExpandedNodeId]"
            ],
            "outFiles": [
                "${workspaceFolder}/build/src/**/*.js"
            ],
            "outputCapture": "std",
            "cwd": "${workspaceFolder}/build/src",
            "preLaunchTask": "Build Debug",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Node Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\build\\src\\index.js",
            "args": [],
            "outFiles": [
                "${workspaceFolder}/build/src/**/*.js"
            ],
            "outputCapture": "std",
            "cwd": "${workspaceFolder}/build/src",
            "preLaunchTask": "Build Debug",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "cwd": "${workspaceRoot}\\build\\test",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "test"
            ],
            "port": 9229,
            "internalConsoleOptions": "openOnSessionStart",
            "preLaunchTask": "Build Debug",
        }
    ]
}